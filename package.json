{
  "name": "node-typescript-jest-eslint-boilerplate",
  "version": "1.0.0",
  "author": "yantene",
  "license": "CC0-1.0",
  "scripts": {
    "start": "node ./dist/start.js",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --config ./eslintrc.yaml \"./**/*.ts\"",
    "lint:prettier": "prettier --check \"./**/*.ts\"",
    "format": "run-s format:*",
    "format:eslint": "eslint --config ./eslintrc.yaml --fix \"./**/*.ts\"",
    "format:prettier": "prettier --write \"./**/*.ts\"",
    "doc": "typedoc --out doc/ src/",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.32",
    "typescript": "^4.2.3"
  }
}
